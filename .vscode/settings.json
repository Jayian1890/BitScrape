{
    // C/C++ settings
    "C_Cpp.default.compileCommands": "${workspaceFolder}/builddir/compile_commands.json",
    "C_Cpp.default.configurationProvider": "mesonbuild.mesonbuild",
    "C_Cpp.default.cppStandard": "c++23",
    "C_Cpp.default.intelliSenseMode": "clang-x64",
    "C_Cpp.autocomplete": "default",
    "C_Cpp.errorSquiggles": "enabled",
    "C_Cpp.intelliSenseEngine": "default",
    "C_Cpp.enhancedColorization": "enabled",
    "C_Cpp.suggestSnippets": true,
    "C_Cpp.vcpkg.enabled": false,
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/**",
        "${workspaceFolder}/modules/*/include"
    ],
    "C_Cpp.default.browse.path": [
        "${workspaceFolder}/**"
    ],
    "C_Cpp.default.browse.limitSymbolsToIncludedHeaders": true,
    "C_Cpp.default.browse.databaseFilename": "${workspaceFolder}/.vscode/browse.vc.db",
    // Editor settings
    "editor.formatOnSave": true,
    "editor.rulers": [
        100
    ],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    // Files settings
    "files.associations": {
        "*.build": "meson",
        "meson.build": "meson",
        "meson_options.txt": "meson"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "builddir/**": false
    },
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.watcherExclude": {
        "builddir/**": true
    },
    "search.exclude": {
        "builddir/**": true
    },
    // Meson settings
    "mesonbuild.configureOnOpen": true,
    "mesonbuild.buildFolder": "builddir",
    "mesonbuild.downloadLanguageServer": true,
    "mesonbuild.mesonPath": "meson",
    "mesonbuild.configureOptions": [
        "--buildtype=debug"
    ],
    "mesonbuild.buildOptions": [
        "-j8"
    ],
    "testMate.cpp.test.executables": "builddir/modules/**/*{test,Test,TEST}*",
    "testMate.cpp.log.logSentry": "disable",
    "testMate.cpp.debug.configTemplate": {
        "type": "lldb",
        "program": "${exec}",
        "cwd": "${workspaceFolder}",
        "args": [
            "--gtest_filter=${tests}"
        ],
        "env": {
            "GTEST_COLOR": "1"
        }
    },
    "testMate.cpp.test.framework": "googletest",
    // Terminal settings
    "terminal.integrated.cwd": "${workspaceFolder}",
    // Explorer settings
    "explorer.autoReveal": false,
    "explorer.compactFolders": false
}
