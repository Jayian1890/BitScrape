{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Current Test File",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/${fileBasenameNoExtension}",
            "args": ["--gtest_filter=*"],
            "cwd": "${workspaceFolder}",
            "env": {
                "GTEST_COLOR": "1",
                "ASAN_OPTIONS": "detect_leaks=0:abort_on_error=1"
            },
            "preLaunchTask": "cmake: build",
            "initCommands": [
                "settings set target.x86-disassembly-flavor intel",
                "settings set target.inline-breakpoint-strategy always"
            ],
            "presentation": {
                "hidden": false,
                "group": "Tests",
                "order": 1
            }
        },
        {
            "name": "CLI Debug",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/bitscrape_cli",
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "ASAN_OPTIONS": "detect_leaks=0:abort_on_error=1"
            },
            "preLaunchTask": "cmake: build cli",
            "initCommands": [
                "settings set target.x86-disassembly-flavor intel",
                "settings set target.inline-breakpoint-strategy always"
            ],
            "presentation": {
                "hidden": false,
                "group": "BitScrape",
                "order": 1
            }
        },
        {
            "name": "GUI Debug",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/bitscrape_gui",
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "ASAN_OPTIONS": "detect_leaks=0:abort_on_error=1"
            },
            "preLaunchTask": "cmake: build gui",
            "postDebugTask": "cmake: clean up debug",
            "initCommands": [
                "settings set target.x86-disassembly-flavor intel",
                "settings set target.inline-breakpoint-strategy always"
            ],
            "presentation": {
                "hidden": false,
                "group": "BitScrape",
                "order": 2
            }
        },
        {
            "name": "Module Test Debug",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/${input:moduleDir}_test",
            "args": ["--gtest_filter=${input:testFilter}"],
            "cwd": "${workspaceFolder}",
            "env": {
                "GTEST_COLOR": "1",
                "ASAN_OPTIONS": "detect_leaks=0:abort_on_error=1"
            },
            "preLaunchTask": "cmake: build module test",
            "postDebugTask": "cmake: clean up debug",
            "initCommands": [
                "settings set target.x86-disassembly-flavor intel",
                "settings set target.inline-breakpoint-strategy always"
            ],
            "presentation": {
                "hidden": false,
                "group": "Tests",
                "order": 1
            }
        },
        {
            "name": "Run Specific Test",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/${input:testPath}",
            "args": ["--gtest_filter=${input:testFilter}"],
            "cwd": "${workspaceFolder}",
            "env": {
                "GTEST_COLOR": "1",
                "ASAN_OPTIONS": "detect_leaks=0:abort_on_error=1"
            },
            "preLaunchTask": "cmake: build",
            "postDebugTask": "cmake: clean up debug",
            "initCommands": [
                "settings set target.x86-disassembly-flavor intel",
                "settings set target.inline-breakpoint-strategy always"
            ],
            "presentation": {
                "hidden": false,
                "group": "Tests",
                "order": 2
            }
        }
    ],
    "inputs": [
        {
            "id": "moduleDir",
            "type": "pickString",
            "description": "Select the module",
            "options": [
                "bencode",
                "beacon",
                "bittorrent",
                "core",
                "dht",
                "event",
                "network",
                "storage",
                "types"
            ]
        },
        {
            "id": "testPath",
            "type": "promptString",
            "description": "Test executable name",
            "default": "types_test"
        },
        {
            "id": "testFilter",
            "type": "promptString",
            "description": "Test filter (e.g. TestCase.TestName)",
            "default": "*"
        }
    ]
}
