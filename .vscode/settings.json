{
  //----------------------------------------------
  // Editor Settings
  //----------------------------------------------
  "editor.bracketPairColorization.enabled": true,
  "editor.detectIndentation": false,
  "editor.formatOnSave": false,
  "editor.guides.bracketPairs": "active",
  "editor.inlayHints.enabled": "on",
  "editor.insertSpaces": true,
  "editor.rulers": [100],
  "editor.semanticHighlighting.enabled": true,
  "editor.tabSize": 4,

  //----------------------------------------------
  // Files & Workspace Settings
  //----------------------------------------------
  "files.associations": {
    "*.build": "cmake",
    "*.cmake": "cmake",
    "*.cmake.in": "cmake",
    "*.tcc": "cpp",
    "CMakeLists.txt": "cmake",
    "algorithm": "cpp",
    "array": "cpp",
    "atomic": "cpp",
    "bit": "cpp",
    "chrono": "cpp",
    "compare": "cpp",
    "concepts": "cpp",
    "condition_variable": "cpp",
    "cstddef": "cpp",
    "deque": "cpp",
    "functional": "cpp",
    "future": "cpp",
    "initializer_list": "cpp",
    "iosfwd": "cpp",
    "iterator": "cpp",
    "map": "cpp",
    "memory": "cpp",
    "memory_resource": "cpp",
    "mutex": "cpp",
    "numeric": "cpp",
    "optional": "cpp",
    "random": "cpp",
    "ranges": "cpp",
    "ratio": "cpp",
    "set": "cpp",
    "span": "cpp",
    "stdexcept": "cpp",
    "stop_token": "cpp",
    "string": "cpp",
    "string_view": "cpp",
    "system_error": "cpp",
    "thread": "cpp",
    "tuple": "cpp",
    "type_traits": "cpp",
    "unordered_map": "cpp",
    "unordered_set": "cpp",
    "utility": "cpp",
    "variant": "cpp",
    "vector": "cpp"
  },
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/CVS": true,
    "**/Thumbs.db": true,
    ".cache": true,
    ".memory-bank": true,
    "build": true,
    "cmake": true,
    "compile_commands.json": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    ".cache/**": true,
    "build/**": true
  },
  "hide-files.files": [
    "cmake",
    "build",
    "compile_commands.json"
  ],
  "search.exclude": {
    "**/.git/**": true,
    ".cache/**": true,
    "build/**": true
  },

  //----------------------------------------------
  // Terminal and Explorer Settings
  //----------------------------------------------
  "explorer.autoReveal": false,
  "explorer.compactFolders": false,
  "terminal.integrated.cwd": "${workspaceFolder}",

  //----------------------------------------------
  // CMake Configuration
  //----------------------------------------------
  "cmake.buildDirectory": "${workspaceFolder}/build",
  "cmake.configureArgs": [
    "-DBUILD_TESTS=ON"
  ],
  "cmake.configureOnOpen": true,
  "cmake.configureSettings": {
    "CMAKE_BUILD_TYPE": "Debug"
  },
  "cmake.generator": "Ninja",
  "cmake.parallelJobs": 8,

  //----------------------------------------------
  // C++ Development (Clangd)
  //----------------------------------------------
  "clangd.arguments": [
    "--background-index",
    "--clang-tidy",
    "--completion-style=detailed",
    "--header-insertion=iwyu",
    "--suggest-missing-includes",
    "--compile-commands-dir=./build",
    "--all-scopes-completion",
    "--pch-storage=memory",
    "--function-arg-placeholders",
    "--fallback-style=Google",
    "--enable-config"
  ],
  "clangd.checkUpdates": true,
  "clangd.onConfigChanged": "restart",
  "clangd.restartAfterCrash": true,
  "clangd.serverCompletionRanking": true,

  //----------------------------------------------
  // Testing Configuration
  //----------------------------------------------
  "testMate.cpp.test.advancedExecutables": [
    {
      "pattern": "{build,Build,BUILD,out,Out,OUT}/**/*{test,Test,TEST}*",
      "cwd": "${workspaceFolder}"
    }
  ],
  "testMate.cpp.test.executables": "{build,Build,BUILD,out,Out,OUT}/**/*{test,Test,TEST}*",

  //----------------------------------------------
  // SonarLint Settings
  //----------------------------------------------
"sonarlint.pathToCompileCommands": "${workspaceFolder}/build/compile_commands.json",
"sonarlint.connectedMode.project": {
    "connectionId": "interlacedpixel",
    "projectKey": "Jayian1890_BitScrape"
}
}
