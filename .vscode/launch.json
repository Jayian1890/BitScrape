{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "CLI Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/bitscrape_cli",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "ASAN_OPTIONS",
                    "value": "detect_leaks=0"
                }
            ],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "cmake: build cli"
        },
        {
            "name": "GUI Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/bitscrape_gui",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "ASAN_OPTIONS",
                    "value": "detect_leaks=0"
                }
            ],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "cmake: build gui"
        },
        {
            "name": "Module Test Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/${input:moduleDir}_test",
            "args": ["--gtest_filter=${input:testFilter}"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "GTEST_COLOR",
                    "value": "1"
                },
                {
                    "name": "ASAN_OPTIONS",
                    "value": "detect_leaks=0"
                }
            ],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "cmake: build"
        },
        {
            "name": "Run Specific Test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/${input:testPath}",
            "args": ["--gtest_filter=${input:testFilter}"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "GTEST_COLOR",
                    "value": "1"
                },
                {
                    "name": "ASAN_OPTIONS",
                    "value": "detect_leaks=0"
                }
            ],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "cmake: build"
        }
    ],
    "inputs": [
        {
            "id": "moduleDir",
            "type": "pickString",
            "description": "Select the module",
            "options": [
                "bencode",
                "beacon",
                "bittorrent",
                "core",
                "dht",
                "event",
                "network",
                "storage",
                "types"
            ]
        },
        {
            "id": "testPath",
            "type": "promptString",
            "description": "Test executable name",
            "default": "types_test"
        },
        {
            "id": "testFilter",
            "type": "promptString",
            "description": "Test filter (e.g. TestCase.TestName)",
            "default": "*"
        }
    ]
}
