{
  "version": 3,
  "configurePresets": [
    {
      "name": "debug",
      "displayName": "Debug",
      "description": "Debug build with tests enabled",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTS": "ON",
        "ENABLE_ASAN": "OFF",
        "BUILD_TOOLS": "ON",
        "BUILD_EXAMPLES": "ON",
        "BUILD_GUI": "ON",
        "BUILD_CLI": "ON"
      }
    },
    {
      "name": "release",
      "displayName": "Release",
      "description": "Release build with optimizations",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_TESTS": "ON",
        "ENABLE_ASAN": "OFF",
        "BUILD_TOOLS": "ON",
        "BUILD_EXAMPLES": "ON",
        "BUILD_GUI": "ON",
        "BUILD_CLI": "ON"
      }
    },
    {
      "name": "debug-asan",
      "displayName": "Debug with ASAN",
      "description": "Debug build with AddressSanitizer enabled",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/debug-asan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTS": "ON",
        "ENABLE_ASAN": "ON",
        "BUILD_TOOLS": "ON",
        "BUILD_EXAMPLES": "ON",
        "BUILD_GUI": "ON",
        "BUILD_CLI": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "jobs": 0
    },
    {
      "name": "release",
      "configurePreset": "release",
      "jobs": 0
    },
    {
      "name": "debug-asan",
      "configurePreset": "debug-asan",
      "jobs": 0
    }
  ],
  "testPresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "output": {"verbosity": "verbose"},
      "execution": {"stopOnFailure": true}
    },
    {
      "name": "release",
      "configurePreset": "release",
      "output": {"verbosity": "verbose"},
      "execution": {"stopOnFailure": true}
    },
    {
      "name": "debug-asan",
      "configurePreset": "debug-asan",
      "output": {"verbosity": "verbose"},
      "execution": {"stopOnFailure": true}
    }
  ]
}
