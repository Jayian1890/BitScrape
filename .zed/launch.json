{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch bitscrape_cli (Debug)",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/bitscrape_cli",
      "args": [],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Build CLI App (Debug)",
      "stopOnEntry": false,
      "console": "integratedTerminal",
    },
    {
      "name": "Launch bitscrape_cli with --help",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/bitscrape_cli",
      "args": ["--help"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Build CLI App (Debug)",
      "stopOnEntry": false,
      "console": "integratedTerminal",
    },
    {
      "name": "Launch bitscrape_cli with custom config",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/bitscrape_cli",
      "args": ["--config", "bitscrape.json"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Build CLI App (Debug)",
      "stopOnEntry": false,
      "console": "integratedTerminal",
    },
    {
      "name": "Launch bitscrape_cli with web UI",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/bitscrape_cli",
      "args": ["--web"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Build CLI App (Debug)",
      "stopOnEntry": false,
      "console": "integratedTerminal",
    },
    {
      "name": "Debug Core Module Tests",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/tests/core/run_tests",
      "args": ["--success"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Build All (Debug)",
      "stopOnEntry": false,
      "console": "integratedTerminal",
    },
    {
      "name": "Debug Storage Module Tests",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/tests/storage/run_tests",
      "args": ["--success"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Build All (Debug)",
      "stopOnEntry": false,
      "console": "integratedTerminal",
    },
    {
      "name": "Debug DHT Module Tests",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/tests/dht/run_tests",
      "args": ["--success"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Build All (Debug)",
      "stopOnEntry": false,
      "console": "integratedTerminal",
    },
    {
      "name": "Debug BitTorrent Module Tests",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/tests/bittorrent/run_tests",
      "args": ["--success"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Build All (Debug)",
      "stopOnEntry": false,
      "console": "integratedTerminal",
    },
    {
      "name": "Debug Web Module Tests",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/tests/web/run_tests",
      "args": ["--success"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Build All (Debug)",
      "stopOnEntry": false,
      "console": "integratedTerminal",
    },
    {
      "name": "Attach to Process by PID",
      "type": "lldb",
      "request": "attach",
      "pid": "${command:pickProcess}",
    },
    {
      "name": "Attach to bitscrape_cli by Name",
      "type": "lldb",
      "request": "attach",
      "program": "${workspaceFolder}/build/bin/bitscrape_cli",
      "waitFor": true,
    },
  ],
}
