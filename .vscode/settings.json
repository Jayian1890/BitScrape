{
  // Editor Settings
  "editor.formatOnSave": false,
  "editor.rulers": [100],
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.semanticHighlighting.enabled": true,

  // File Associations
  "files.associations": {
    "*.build": "cmake",
    "CMakeLists.txt": "cmake",
    "*.cmake": "cmake",
    "*.cmake.in": "cmake",
    "future": "cpp",
    "vector": "cpp",
    "string": "cpp",
    "array": "cpp",
    "atomic": "cpp",
    "bit": "cpp",
    "*.tcc": "cpp",
    "chrono": "cpp",
    "compare": "cpp",
    "concepts": "cpp",
    "condition_variable": "cpp",
    "cstddef": "cpp",
    "deque": "cpp",
    "map": "cpp",
    "set": "cpp",
    "string_view": "cpp",
    "unordered_map": "cpp",
    "unordered_set": "cpp",
    "algorithm": "cpp",
    "functional": "cpp",
    "iterator": "cpp",
    "memory": "cpp",
    "memory_resource": "cpp",
    "numeric": "cpp",
    "optional": "cpp",
    "random": "cpp",
    "ratio": "cpp",
    "system_error": "cpp",
    "tuple": "cpp",
    "type_traits": "cpp",
    "utility": "cpp",
    "initializer_list": "cpp",
    "iosfwd": "cpp",
    "mutex": "cpp",
    "ranges": "cpp",
    "span": "cpp",
    "stdexcept": "cpp",
    "stop_token": "cpp",
    "thread": "cpp",
    "variant": "cpp"
  },

  // File Exclusions
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/CVS": true,
    ".cache": true,
    ".memory-bank": true,
    "cmake": true,
    "build": true,
    "compile_commands.json": true
},
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.watcherExclude": {
    "build/**": true,
    ".cache/**": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true
  },
  "search.exclude": {
    "build/**": true,
    ".cache/**": true,
    "**/.git/**": true
  },

  // CMake Configuration
  "cmake.configureOnOpen": true,
  "cmake.buildDirectory": "${workspaceFolder}/build",
  "cmake.configureSettings": {
    "CMAKE_BUILD_TYPE": "Debug"
  },
  "cmake.parallelJobs": 8,
  "cmake.generator": "Ninja",

  // Test Configuration
  "testMate.cpp.test.executables": "build/bin/*{test,Test,TEST}*",
  "testMate.cpp.log.logSentry": "disable",
  "testMate.cpp.test.advancedExecutables": [
    {
      "pattern": "build/bin/*{test,Test,TEST}*",
      "cwd": "${workspaceFolder}"
    }
  ],
  "testMate.cpp.debug.configTemplate": {
    "type": "lldb",
    "program": "${exec}",
    "cwd": "${workspaceFolder}",
    "args": [
      "--gtest_filter=${tests}"
    ],
    "env": {
      "GTEST_COLOR": "1"
    }
  },
  "testMate.cpp.test.framework": "googletest",
  "testMate.cpp.discovery.runtimeLimit": 900,

  // Terminal and Explorer Settings
  "terminal.integrated.cwd": "${workspaceFolder}",
  "explorer.autoReveal": false,
  "explorer.compactFolders": false,

  // Clangd Settings
  "clangd.checkUpdates": true,
  "clangd.arguments": [
    "--background-index",
    "--clang-tidy",
    "--completion-style=detailed",
    "--header-insertion=iwyu",
    "--suggest-missing-includes",
    "--compile-commands-dir=./build",
    "--all-scopes-completion",
    "--pch-storage=memory",
    "--function-arg-placeholders",
    "--fallback-style=Google",
    "--enable-config"
  ],
  "clangd.onConfigChanged": "restart",
  "clangd.serverCompletionRanking": true,
  "clangd.restartAfterCrash": true,
  "editor.inlayHints.enabled": "on",

  // SonarLint Settings
"sonarlint.pathToCompileCommands": "${workspaceFolder}/build/compile_commands.json",
"hide-files.files": [
    "cmake",
    "build",
    "compile_commands.json"
],

}
