{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "CLI Debug",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/builddir/apps/bitscrape_cli",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "meson: build cli",
            "internalConsoleOptions": "neverOpen",
            "terminal": "integrated"
        },
        {
            "name": "GUI Debug (.app)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/builddir/apps/gui/bitscrape_gui.app/Contents/MacOS/bitscrape_gui",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "meson: build gui",
            "internalConsoleOptions": "neverOpen",
            "terminal": "integrated"
        },
        {
            "name": "Module Test Debug",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/builddir/modules/${input:moduleDir}/${input:moduleDir}_test",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "meson: build",
            "internalConsoleOptions": "neverOpen",
            "terminal": "integrated"
        },
        {
            "name": "Run Specific Test",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/builddir/${input:testPath}",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "meson: build",
            "internalConsoleOptions": "neverOpen",
            "terminal": "integrated"
        }
    ],
    "inputs": [
        {
            "id": "moduleDir",
            "type": "pickString",
            "description": "Select the module",
            "options": [
                "bencode",
                "bittorrent",
                "core",
                "dht",
                "event",
                "network",
                "storage",
                "types"
            ]
        },
        {
            "id": "testName",
            "type": "promptString",
            "description": "Name of the test executable",
            "default": "test_executable"
        },
        {
            "id": "testPath",
            "type": "promptString",
            "description": "Path to test executable (relative to builddir)",
            "default": "modules/types/tests/types_test"
        }
    ]
}
