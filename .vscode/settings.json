{
  // C/C++ IntelliSense Configuration
  "C_Cpp.default.compileCommands": "${workspaceFolder}/builddir/compile_commands.json",
  "C_Cpp.default.configurationProvider": "mesonbuild.mesonbuild",
  "C_Cpp.default.cppStandard": "c++23",
  "C_Cpp.default.intelliSenseMode": "clang-x64",
  "C_Cpp.intelliSenseEngine": "default",
  "C_Cpp.enhancedColorization": "enabled",
  "C_Cpp.suggestSnippets": true,
  "C_Cpp.vcpkg.enabled": false,
  "C_Cpp.default.includePath": [
    "${workspaceFolder}/**",
    "${workspaceFolder}/modules/*/include"
  ],
  "C_Cpp.default.browse.limitSymbolsToIncludedHeaders": true,
  "C_Cpp.default.browse.databaseFilename": "${workspaceFolder}/.vscode/browse.vc.db",
  "C_Cpp.errorSquiggles": "enabled",
  "C_Cpp.autocomplete": "default",

  // Editor Settings
  "editor.formatOnSave": false,
  "editor.rulers": [100],
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.semanticHighlighting.enabled": true,

  // File Associations
  "files.associations": {
    "*.build": "meson",
    "meson.build": "meson",
    "meson_options.txt": "meson",
    "future": "cpp",
    "vector": "cpp",
    "string": "cpp",
    "array": "cpp",
    "atomic": "cpp",
    "bit": "cpp",
    "*.tcc": "cpp",
    "chrono": "cpp",
    "compare": "cpp",
    "concepts": "cpp",
    "condition_variable": "cpp",
    "cstddef": "cpp",
    "deque": "cpp",
    "map": "cpp",
    "set": "cpp",
    "string_view": "cpp",
    "unordered_map": "cpp",
    "unordered_set": "cpp",
    "algorithm": "cpp",
    "functional": "cpp",
    "iterator": "cpp",
    "memory": "cpp",
    "memory_resource": "cpp",
    "numeric": "cpp",
    "optional": "cpp",
    "random": "cpp",
    "ratio": "cpp",
    "system_error": "cpp",
    "tuple": "cpp",
    "type_traits": "cpp",
    "utility": "cpp",
    "initializer_list": "cpp",
    "iosfwd": "cpp",
    "mutex": "cpp",
    "ranges": "cpp",
    "span": "cpp",
    "stdexcept": "cpp",
    "stop_token": "cpp",
    "thread": "cpp",
    "variant": "cpp"
  },

  // File Exclusions
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    ".cache": true,
    ".memory-bank": false
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.watcherExclude": {
    "builddir/**": true,
    ".cache/**": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true
  },
  "search.exclude": {
    "builddir/**": true,
    ".cache/**": true,
    "**/.git/**": true
  },

  // Meson Build Configuration
  "mesonbuild.configureOnOpen": true,
  "mesonbuild.buildFolder": "builddir",
  "mesonbuild.downloadLanguageServer": true,
  "mesonbuild.mesonPath": "meson",
  "mesonbuild.configureOptions": [
    "--buildtype=debug"
  ],
  "mesonbuild.buildOptions": [
    "-j8"
  ],

  // Test Configuration
  "testMate.cpp.test.executables": "builddir/modules/**/*{test,Test,TEST}*",
  "testMate.cpp.log.logSentry": "disable",
  "testMate.cpp.test.advancedExecutables": [
    {
      "pattern": "builddir/modules/**/*{test,Test,TEST}*",
      "cwd": "${workspaceFolder}"
    }
  ],
  "testMate.cpp.debug.configTemplate": {
    "type": "lldb",
    "program": "${exec}",
    "cwd": "${workspaceFolder}",
    "args": [
      "--gtest_filter=${tests}"
    ],
    "env": {
      "GTEST_COLOR": "1"
    }
  },
  "testMate.cpp.test.framework": "googletest",
  "testMate.cpp.discovery.runtimeLimit": 30000,

  // Terminal and Explorer Settings
  "terminal.integrated.cwd": "${workspaceFolder}",
  "explorer.autoReveal": false,
  "explorer.compactFolders": false,

  // Clangd Settings
  "clangd.checkUpdates": true,
  "clangd.arguments": [
    "--background-index",
    "--clang-tidy",
    "--completion-style=detailed",
    "--header-insertion=iwyu",
    "--suggest-missing-includes",
    "--compile-commands-dir=${workspaceFolder}/builddir"
  ],

  // SonarLint Settings
  "sonarlint.pathToCompileCommands": "${workspaceFolder}/builddir/compile_commands.json"
}
